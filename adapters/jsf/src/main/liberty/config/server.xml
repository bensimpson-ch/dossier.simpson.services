<server description="Dossier Openliberty Server">
    <featureManager>
        <feature>jakartaee-9.1</feature>
        <feature>webProfile-9.1</feature>
        <feature>openidConnectClient-1.0</feature>
        <feature>transportSecurity-1.0</feature>
    </featureManager>

    <logging traceSpecification="JPA=all"/>

    <httpEndpoint host="*" httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>

    <basicRegistry id="basic" realm="dossier">
        <user name="ben" password="benpwd"/>
        <group name="dossier-user">
            <member name="ben"/>
        </group>
    </basicRegistry>

    <webApplication id="adapter-jsf" location="adapter-jsf.war" name="adapter-jsf"
                    contextRoot="/dossier">
        <application-bnd>
            <security-role name="dossier-user">
                <user name="ben"/>
            </security-role>
        </application-bnd>
    </webApplication>

    <include location="postgres-datasource.xml"/>

</server>